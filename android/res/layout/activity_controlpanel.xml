<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <org.x3f.autobot.MjpegView
		android:id="@+id/mv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
    
    <RelativeLayout  
	    android:layout_width="fill_parent"  
	    android:layout_height="fill_parent" >  
	    
	    <ImageButton android:id="@+id/btnBackward"  
	        android:layout_width="100dp"  
	        android:layout_height="wrap_content"  
	        android:layout_centerInParent="true"  
	        android:layout_centerHorizontal="true"  
	        android:background="#00000000"
		    android:src="@drawable/arrow_down" />
	      
		<ImageButton android:id="@+id/btnLeft"  
	        android:layout_width="100dp"  
	        android:layout_height="wrap_content"  
	        android:layout_toStartOf="@id/btnBackward"
	        android:layout_toLeftOf="@id/btnBackward"  
	        android:layout_below="@id/btnBackward"  
	        android:background="#00000000"
		    android:src="@drawable/arrow_turnleft" />
	    
		<ImageButton android:id="@+id/btnRight"  
	        android:layout_width="100dp"  
	        android:layout_height="wrap_content"  
	        android:layout_toRightOf="@id/btnBackward"
	        android:layout_toEndOf="@id/btnBackward"  
	        android:layout_below="@id/btnBackward"  
	        android:background="#00000000"
		    android:src="@drawable/arrow_turnright" />
		
	    <ImageButton android:id="@+id/btnAdjLeft"  
	        android:layout_width="100dp"  
	        android:layout_height="wrap_content"  
	        android:layout_toStartOf="@id/btnBackward"
	        android:layout_toLeftOf="@id/btnBackward"  
	        android:layout_above="@id/btnBackward"  
	        android:background="#00000000"
		    android:src="@drawable/arrow_left" />
	    
	    <ImageButton android:id="@+id/btnAdjRight"  
	        android:layout_width="100dp"  
	        android:layout_height="wrap_content"  
	        android:layout_toRightOf="@id/btnBackward"
	        android:layout_toEndOf="@id/btnBackward"  
	        android:layout_above="@id/btnBackward"  
	        android:background="#00000000"
		    android:src="@drawable/arrow_right" />
	    
	    <ImageButton android:id="@+id/btnForward"  
	        android:layout_width="100dp"  
	        android:layout_height="wrap_content"  
	        android:layout_toRightOf="@id/btnAdjLeft"
	        android:layout_toEndOf="@id/btnAdjLeft"  
	        android:layout_toLeftOf="@id/btnAdjRight" 
	        android:layout_toStartOf="@id/btnAdjRight" 
	        android:layout_above="@id/btnAdjLeft"  
	        android:background="#00000000"
		    android:src="@drawable/arrow_up" />

		<ImageButton
		    android:id="@+id/btnStop"
		    android:layout_width="100dp"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/btnForward"
		    android:layout_centerHorizontal="true"
		    android:background="#00000000"
		    android:src="@drawable/arrow_stop" />
	
	    <ImageButton
	        android:id="@+id/btnGearDown"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentEnd="true"
	        android:background="#00000000"
		    android:src="@drawable/btn_geardown" />
	
	    <ImageButton
	        android:id="@+id/btnGearUp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/btnGearDown"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentEnd="true"
	        android:background="#00000000"
		    android:src="@drawable/btn_gearup" />

	    <ToggleButton
	        android:id="@+id/btnToggleVideo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignTop="@+id/btnGearDown"
	        android:textOn="@string/btn_disablevideo"
	        android:textOff="@string/btn_enablevideo" />
	  
	</RelativeLayout>
</FrameLayout>